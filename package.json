{
  "name": "zagreb-buildings",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "geocode:area": "tsx scripts/geocode.ts",
    "footprints:area": "tsx scripts/fetch_footprints.ts",
    "build:geojson:area": "tsx scripts/build_geojson.ts",
    "geocode": "npm run geocode:area combined",
    "footprints": "npm run footprints:area combined",
    "build:geojson": "npm run build:geojson:area combined",
    "pipeline": "npm run geocode && npm run footprints && npm run build:geojson",
    "pipeline:area": "echo \"Use: npm run geocode:area -- <area> && npm run footprints:area -- <area> && npm run build:geojson:area -- <area>\"",
    "report:pipeline:area": "tsx scripts/pipeline_summary.ts",
    "report:pipeline": "npm run report:pipeline:area combined",
    "scrape:area": "tsx scripts/scrape_arhitektura_zagreba.ts",
    "normalize:area": "tsx scripts/normalize_raw.ts",
    "ingest:area": "tsx scripts/scrape_and_normalize.ts",
    "combine:areas": "tsx scripts/combine_areas.ts",
    "process:area": "echo \"Use: npm run scrape:area -- <area> && npm run normalize:area -- <area>\"",
    "rebuild:combined": "tsx scripts/rebuild_combined.ts",
    "report:collisions": "tsx scripts/report_footprint_collisions.ts"
  },
  "dependencies": {
    "@turf/area": "^7.3.1",
    "@turf/boolean-contains": "^7.3.3",
    "@turf/boolean-point-in-polygon": "^7.3.1",
    "@turf/helpers": "^7.3.1",
    "maplibre-gl": "^5.15.0",
    "next": "16.1.1",
    "osmtogeojson": "^3.0.0-beta.5",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "string-similarity": "^4.0.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/string-similarity": "^4.0.2",
    "cheerio": "^1.1.2",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
